<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/intro_background"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.7"
        android:gravity="bottom"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgIntro6"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:text="همراه تبریز"
            android:textStyle="bold"
            android:textSize="16sp"
            android:id="@+id/txtIntro6"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textColor="@color/detailsTitle"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="شروع کن"
            android:layout_marginTop="40dp"
            android:background="@drawable/btn_intro"
            android:id="@+id/btnIntro6"
            android:textColor="@color/detailsTitle"
            style="@style/AudioFileInfoOverlayText2"
            android:textSize="20sp" />

    </LinearLayout>


</LinearLayout>