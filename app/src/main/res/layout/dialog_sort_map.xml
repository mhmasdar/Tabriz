<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="250dp"
    android:background="@color/darkWhite"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:text="نمایش گزینه ها بر اساس"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_marginRight="3dp"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:text="هیچ کدام"
                    android:id="@+id/txtOption"
                    android:gravity="center"
                    android:layout_height="40dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="بیشترین امتیاز"
                    android:id="@+id/txtOption1"
                    android:gravity="center"
                    android:layout_height="40dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="نزدیک ترین"
                    android:id="@+id/txtOption2"
                    android:gravity="center"
                    android:layout_height="40dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:text="علاقه مندی های من"
                    android:id="@+id/txtOption3"
                    android:gravity="center"
                    android:layout_height="40dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:id="@+id/radioGroup"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:id="@+id/radio"
                        android:buttonTint="@color/colorPrimary"
                        android:layout_height="40dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:id="@+id/radio1"
                        android:buttonTint="@color/colorPrimary"
                        android:layout_height="40dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:id="@+id/radio2"
                        android:buttonTint="@color/colorPrimary"
                        android:layout_height="40dp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:id="@+id/radio3"
                        android:buttonTint="@color/colorPrimary"
                        android:layout_height="40dp" />


                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_back_exit"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="لغو"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btnSort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_back_login"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="تایید"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="13sp" />


    </LinearLayout>

</LinearLayout>