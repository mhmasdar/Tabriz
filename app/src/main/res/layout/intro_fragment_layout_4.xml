<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/intro_background"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.5"
        android:gravity="center_horizontal"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgIntro4"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:layout_gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtIntro4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="خیلی راحت مسیرت رو پیدا کن ! "
            android:textStyle="bold"
            style="@style/AudioFileInfoOverlayText2"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/txtIntro4_1"
            android:layout_width="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:layout_marginLeft="15dp"
            android:layout_height="wrap_content"
            android:text="هر کجا که خواستی بری، نزدیک ترین و آسون ترین مسیر بین خودت و مقصد رو پیدا کن و از رفتن به اونجا لذت ببر"
            style="@style/AudioFileInfoOverlayText2"
            android:textColor="@color/white"
            android:textSize="16sp"/>

    </LinearLayout>


</LinearLayout>