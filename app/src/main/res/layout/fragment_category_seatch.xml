<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.tabrizguilds.tabrizguilds.fragments.categorySeatchFragment">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content">


        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="0.15"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="wrap_content">

                        <net.cachapa.expandablelayout.ExpandableLayout
                            android:id="@+id/expandable_layout"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            app:el_duration="1000"
                            app:el_expanded="true"
                            app:el_parallax="0.5"
                            android:background="@drawable/search_back"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingRight="10dp"
                                android:minHeight="?attr/actionBarSize">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:id="@+id/lytSearch"
                                    android:gravity="center"
                                    android:paddingLeft="15dp"
                                    android:paddingRight="15dp"
                                    android:background="@drawable/search_text_back"
                                    android:layout_height="match_parent">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:text="جستجو"
                                        android:gravity="center"
                                        android:background="?attr/selectableItemBackground"
                                        android:textSize="13sp"
                                        android:textColor="@color/white"
                                        android:layout_height="match_parent" />

                                </LinearLayout>

                                <EditText
                                    android:id="@+id/edt_search"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:hint="عبارت مورد نظر خود را وارد کنید"
                                    android:singleLine="true"
                                    android:textCursorDrawable="@drawable/cursor_color"
                                    android:background="@android:color/transparent"
                                    android:textColor="@color/dark"
                                    android:textSize="13sp"
                                    android:layout_weight="0.7"/>

                                <ImageView
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:src="@drawable/ic_search_small"
                                    />

                            </LinearLayout>

                        </net.cachapa.expandablelayout.ExpandableLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/lytBack"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="21dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_back_search"
                            android:layout_height="21dp" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:id="@+id/lytSort"
                        android:layout_weight="1"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">


                        <TextView
                            android:layout_width="wrap_content"
                            android:text="ترتیب نمایش"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/colorPrimary"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:layout_width="20dp"
                            android:src="@drawable/ic_sort"
                            android:layout_height="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="1dp"
                        android:orientation="horizontal"
                        android:id="@+id/lytSeperate"
                        android:visibility="gone"
                        android:background="#E9E9E9"
                        android:layout_height="match_parent"></LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:id="@+id/lytFilter"
                        android:layout_weight="1"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:gravity="center"
                        android:background="?attr/selectableItemBackground"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">


                        <TextView
                            android:layout_width="wrap_content"
                            android:text="فیلترها"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/colorPrimary"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:layout_width="20dp"
                            android:src="@drawable/ic_filter"
                            android:layout_height="20dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/recycle"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

</LinearLayout>
