<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical"
    android:background="@drawable/list_border"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="right"
            android:layout_weight="1"
            android:layout_marginRight="8dp"
            android:paddingLeft="5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txtNewsTitle"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:layout_marginTop="10dp"
              android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txtNewsBody"
                android:layout_marginTop="12dp"
                android:textColor="@color/itmesText"
                android:textSize="14sp"
                android:layout_marginRight="5dp"
                android:lineSpacingMultiplier="1.5"
                android:ellipsize="end"
                android:maxLines="2"
               android:layout_height="wrap_content" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="90dp">

            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/imgNews"
                android:scaleType="fitXY"
                android:background="@drawable/items_default"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/txtType"
                android:layout_alignParentBottom="true"
                android:background="#b8f7f7f7"

                style="@style/AudioFileInfoOverlayText2"
                android:textSize="10sp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:textColor="@color/dark"
                android:gravity="center"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="40dp"
                android:id="@+id/imgShare"
                android:src="@drawable/ic_share1"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:layout_centerInParent="true"
                android:layout_height="40dp" />

            <ImageView
                android:layout_width="40dp"
                android:src="@drawable/ic_comment"
                android:layout_height="40dp"
                android:padding="10dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="0"
                android:id="@+id/txtCommentCount"
                android:textSize="13sp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />

            <!--<com.like.LikeButton-->
                <!--android:layout_width="30dp"-->
                <!--android:id="@+id/btnLike"-->
                <!--app:unlike_drawable="@drawable/ic_love"-->
                <!--app:like_drawable="@drawable/ic_like1"-->
                <!--app:icon_size="20dp"-->
                <!--app:icon_type="heart"-->
                <!--android:layout_height="30dp" />-->

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:text="23"-->
                <!--android:id="@+id/txtLikeCount"-->
                <!--android:textSize="12sp"-->
                <!--android:layout_marginLeft="3dp"-->
                <!--android:textColor="@color/colorPrimary"-->
                <!--android:layout_height="wrap_content" />-->


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <!--<ImageView-->
                <!--android:layout_width="15dp"-->
                <!--android:src="@drawable/ic_comments"-->
                <!--android:layout_height="15dp" />-->

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:text="12"-->
                <!--android:id="@+id/txtCommentCount"-->
                <!--android:textSize="13sp"-->
                <!--android:layout_marginLeft="3dp"-->
                <!--android:textColor="@color/colorPrimary"-->
                <!--android:layout_height="wrap_content" />-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/txtDate"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:textColor="@color/mainBarText"
                android:textSize="12sp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="17dp"
                android:src="@drawable/ic_date"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>