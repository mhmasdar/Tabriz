<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <TextView
        android:id="@+id/txtQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lytOption1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right">

                <TextView
                    android:id="@+id/txtOption1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtPercent1"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/colorPrimary" />

                    <ProgressBar
                        android:id="@+id/progress1"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progressDrawable="@drawable/progress_bar"
                        android:scaleY="3.0" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lytOption2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right">

                <TextView
                    android:id="@+id/txtOption2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="50dp"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/txtPercent2"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content" />

                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/progress2"
                        android:max="100"
                        android:scaleY="3.0"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:progressDrawable="@drawable/progress_bar"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lytOption3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right">

                <TextView
                    android:id="@+id/txtOption3"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="50dp"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/txtPercent3"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content" />

                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/progress3"
                        android:max="100"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:scaleY="3.0"
                        android:progressDrawable="@drawable/progress_bar"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lytOption4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right">

                <TextView
                    android:id="@+id/txtOption4"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:layout_width="50dp"
                        android:textColor="@color/colorPrimary"
                        android:id="@+id/txtPercent4"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content" />

                    <ProgressBar
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/progress4"
                        android:max="100"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:scaleY="3.0"
                        android:progressDrawable="@drawable/progress_bar"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/itmesShadow"></LinearLayout>

</LinearLayout>